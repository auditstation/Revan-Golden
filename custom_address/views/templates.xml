<odoo>
    <template id="custom_website_insert_customtext" inherit_id="website_sale.address">
        <xpath expr="//label[@for='state_id']" position="replace">
            <label class="col-form-label" for="state_id" style="display: none;"/>
        </xpath>

        <xpath expr="//select[@name='state_id']" position="replace">
            <select name="state_id" t-attf-class="form-select #{error.get('state_id') and 'is-invalid' or ''}"
                    data-init="1" t-att-style="'display: none;'">
                <option value="">State / Province...</option>
                <t t-foreach="country_states" t-as="s">
                    <option t-att-value="s.id"
                            t-att-selected="s.id == ('state_id' in checkout and country and checkout['state_id'] != '' and int(checkout['state_id']))">
                        <t t-esc="s.name"/>
                    </option>
                </t>
            </select>
        </xpath>
    </template>
</odoo>