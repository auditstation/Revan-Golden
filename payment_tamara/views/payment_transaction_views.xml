<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_transaction_form" model="ir.ui.view">
        <field name="name">Tamara Transaction Form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <field name="provider_reference" position="after">
                <field name="tamara_order_id"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>

                <field name="tamara_checkout_id"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>

                <field name="tamara_status"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>

                <field name="tamara_capture_id"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>

                <field name="tamara_refund_id"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>
                <field name="tamra_cancel_id"
                       readonly="1"
                       attrs="{'invisible': [('provider_code', '!=', 'tamara')]}"
                       groups="base.group_no_one"/>
            </field>
            <xpath expr="//button[@name='action_void']" position="after">
<button type="object" name="action_cancel" states="done" string="Cancel Transaction" confirm="Are you sure you want to cancel the transaction? This action can't be undone."/>
                    
            </xpath>
            </field>
    </record>

</odoo>
