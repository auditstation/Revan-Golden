<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Thawani Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'thawani')]}">
                    <field name="thawani_client_reference_id"
                           attrs="{'required': [('code', '=', 'thawani'), ('state', '!=', 'disabled')]}"/>
                     <field name="thawani_secret_key"
                           attrs="{'required': [('code', '=', 'thawani'), ('state', '!=', 'disabled')]}"/>       
                    <field name="thawani_publishable_key"
                           attrs="{'required': [('code', '=', 'thawani'), ('state', '!=', 'disabled')]}"/>           
                </group>
            </group>
        </field>
    </record>
   <record id="res_config_settings_view_form_delivery" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.sale</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="10"/>
    <field name="inherit_id" ref="sale.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <xpath expr="//div[@data-key='sale_management']/div" position="after">             
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                             <div class="o_setting_right_pane">                                
                                <group>                                   
                                <field name="delivery_done"/>
                               
                                </group>
                            </div>
                        </div>
                </div>
            </xpath>
    </field>
</record>
    

</odoo>
